@model WebApplication2.Models.ClienteViewModel

@{
    ViewBag.Title = "Home Page";
}
<br />

@if (ViewBag.Sucesso != null && ViewBag.Sucesso == 1)
{
    <div class="alert alert-success" role="alert">
        Conta Cadastrada com sucesso
    </div>
}

<div class="container">
    <div class="row">
        @using (Html.BeginForm("Salvar", "Home"))
        {
            <div class="form-group">
                <label for="exampleInputEmail1">Nome</label>
                @Html.TextBoxFor(x => x.Nome, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Nome)
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">CPF</label>
                @Html.TextBoxFor(x => x.CPF, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.CPF)

            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Agencia</label>
                @Html.TextBoxFor(x => x.Agencia, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Agencia)

            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Conta</label>
                @Html.TextBoxFor(x => x.Conta, new { @class = "form-control" })
                @Html.ValidationMessageFor(x => x.Conta)

            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">Estado</label>
                @Html.DropDownListFor(x => x.Estado, new List<SelectListItem>()
                {
                    new SelectListItem() { Text = "Rio de Janeiro", Value="RJ" },
                    new SelectListItem() { Text = "SP", Value="São Paulo" },
                    new SelectListItem() { Text = "Minas Gerais", Value="MG" }
                }, "Selecione", new { @class = "form-control" })

                @Html.ValidationMessageFor(x => x.Estado)
            </div>

            <button type="submit" class="btn btn-default">Submit</button>
        }
    </div>
</div>